// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  phoneNumber String
  address     Address?  @relation(fields: [addressId], references: [id])
  addressId   Int?      @unique
  projects    Project[]
}

model Address {
  id           Int     @id @default(autoincrement())
  pinCode      Int?
  state        String?
  country      String
  addressLine1 String?
  client       Client?
}

model Project {
  id        Int       @id @default(autoincrement())
  name      String
  type      String?
  client    Client    @relation(fields: [clientId], references: [id])
  clientId  Int
  processes Process[]
}

model Process {
  id       Int       @id @default(autoincrement())
  name     String
  projects Project[]
  tasks    Task[]
}

model Task {
  id        Int       @id @default(autoincrement())
  name      String
  process   Process?  @relation(fields: [processId], references: [id])
  processId Int?
  startTime DateTime?
  endTime   DateTime?
  comments  String?
}
