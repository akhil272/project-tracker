// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  phoneNumber String
  address     Address?  @relation(fields: [addressId], references: [id])
  imageUrl    String?
  mapLink     String?
  addressId   Int?      @unique
  projects    Project[]
}

model Address {
  id           Int     @id @default(autoincrement())
  pinCode      Int?
  state        String?
  country      String
  addressLine1 String?
  client       Client?
}

model Project {
  id        Int                 @id @default(autoincrement())
  name      String
  type      String?
  client    Client              @relation(fields: [clientId], references: [id])
  clientId  Int
  processes ProjectsOnProcess[]
}

model Process {
  id       Int                 @id @default(autoincrement())
  name     String
  projects ProjectsOnProcess[]
}

model ProjectsOnProcess {
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  process   Process @relation(fields: [processId], references: [id])
  processId Int
  tasks     Task[]

  @@id([projectId, processId])
}

model Task {
  id                         Int                @id @default(autoincrement())
  name                       String
  startTime                  DateTime?
  endTime                    DateTime?
  comments                   String?
  projectsOnProcess          ProjectsOnProcess? @relation(fields: [projectsOnProcessProjectId, projectsOnProcessProcessId], references: [projectId, processId])
  projectsOnProcessProjectId Int?
  projectsOnProcessProcessId Int?
}
