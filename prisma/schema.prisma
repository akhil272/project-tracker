// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  phoneNumber String
  addres      Address?
}

model Address {
  id           Int     @id @default(autoincrement())
  pinCode      Int
  state        String?
  country      String
  addressLine1 String?
  client       Client  @relation(fields: [clientId], references: [id])
  clientId     Int     @unique
}
